<div id="comment_<%= comment.id %>">
  <p>
    <%= comment.commenter %>
  </p>

  <p>
    <%= comment.body %>
  </p>

  <p>
    <%= link_to 'Edit', edit_article_comment_path(comment.article, comment) if user_signed_in? %>
    <%= link_to 'Delete', [comment.article, comment], method: :delete,
                data: { confirm: 'Are you sure?'}  if current_user.try(:admin?) %>
  </p>
</div>
